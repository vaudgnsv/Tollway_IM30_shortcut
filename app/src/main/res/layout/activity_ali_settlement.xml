<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".alipay.AliSettlementActivity"
    android:background="@drawable/submainlayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/krungthai_fast_regular"
            android:text=" Settlement"
            android:textColor="@color/color_white"
            android:textSize="40dp"
            android:paddingBottom="10dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/titleLabel2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/krungthai_fast_regular"
            android:paddingBottom="70dp"
            android:textColor="@color/color_white"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="30dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/krungthai_fast_regular"
                android:textSize="15dp"
                android:text="Transaction" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/krungthai_fast_regular"
                android:textSize="15dp"
                android:text="Unit" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/krungthai_fast_regular"
                android:textSize="15dp"
                android:text="Amount" />
        </LinearLayout>

        <LinearLayout
            android:padding="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/krungthai_fast_regular"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="SALE" />

            <TextView
                android:id="@+id/txt_unitsale"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/krungthai_fast_regular"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="10" />

            <TextView
                android:id="@+id/txt_amountsale"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/krungthai_fast_regular"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="12.12" />
        </LinearLayout>

        <LinearLayout
            android:padding="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/krungthai_fast_regular"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="Void" />

            <TextView
                android:id="@+id/txt_unitvoid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/krungthai_fast_regular"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="10" />

            <TextView
                android:id="@+id/txt_amountvoid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/krungthai_fast_regular"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="12.12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/color_ktb"
                android:fontFamily="@font/krungthai_fast_regular"
                android:text="NEXT"
                android:textColor="@color/color_white" />
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
