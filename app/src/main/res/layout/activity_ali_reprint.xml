<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".alipay.AliReprintActivity">

    <LinearLayout
        android:id="@+id/successLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="9"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/ic_check_circle_light_green_a400_48dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/krungthai_fast_regular"
                    android:gravity="center"
                    android:text="SUCCESS"
                    android:textColor="@color/color_black"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/txt_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/krungthai_fast_regular"
                    android:gravity="center"
                    android:text="Printing...."
                    android:textColor="@color/color_black"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/krungthai_fast_regular"
                    android:gravity="center"
                    android:text="-----------------------"
                    android:textColor="@color/color_black"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/krungthai_fast_regular"
                    android:gravity="center"
                    android:text="AMOUNT"
                    android:textColor="@color/color_black"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/txt_subcomment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/krungthai_fast_regular"
                    android:gravity="center"
                    android:text="100.00 THB"
                    android:textColor="@color/color_ktb"
                    android:textSize="30dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_print"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/color_gray"
                    android:fontFamily="@font/krungthai_fast_regular"
                    android:text="Customer Print"
                    android:textColor="@color/color_white" />

                <Button
                    android:id="@+id/btn_backmain"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/color_ktb"
                    android:fontFamily="@font/krungthai_fast_regular"
                    android:text="Back to main"
                    android:textColor="@color/color_white" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/failLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:srcCompat="@drawable/ic_report_problem_red_500_48dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/krungthai_fast_regular"
                android:gravity="center"
                android:text="FAIL"
                android:textColor="@color/color_black"
                android:textSize="25dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/krungthai_fast_regular"
                android:gravity="center"
                android:text="Please try again"
                android:textColor="@color/color_black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/txt_comment2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center" />

        </LinearLayout>


        <Button
            android:id="@+id/btn_backmain2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/color_ktb"
            android:fontFamily="@font/krungthai_fast_regular"
            android:text="Back to main"
            android:textColor="@color/color_white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/inquiryLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:srcCompat="@drawable/ic_report_problem_red_500_48dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/krungthai_fast_regular"
                android:gravity="center"
                android:text="Hold"
                android:textColor="@color/color_black"
                android:textSize="25dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/krungthai_fast_regular"
                android:gravity="center"
                android:text="Please try Inquiry !"
                android:textColor="@color/color_black"
                android:textSize="15dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_inquiry"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/color_green"
                android:fontFamily="@font/krungthai_fast_regular"
                android:text="Inquiry"
                android:textColor="@color/color_white" />

            <Button
                android:id="@+id/btn_backmain3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/color_ktb"
                android:fontFamily="@font/krungthai_fast_regular"
                android:text="Back to main"
                android:textColor="@color/color_white" />
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>