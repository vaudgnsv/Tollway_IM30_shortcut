<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frameLayoutMenuServiceList"
    android:layout_width="110dp"
    android:layout_height="130dp"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/pressed_menu"
    android:gravity="center"
    android:padding="5dp"
    android:layout_margin="5dp"
    android:elevation="5dp"
    android:layout_marginBottom="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_MenuIcon"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/color_clear"
            android:gravity="center"
            android:src="@drawable/img_waiting" />

        <TextView
            android:id="@+id/nameMenuLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/krungthai_fast_bold"
            android:gravity="center"
            android:maxLines="2"
            android:text="@null"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>
</FrameLayout>