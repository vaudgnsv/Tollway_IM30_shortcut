<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".alipay.AliPriceActivity"
    android:background="@drawable/submainlayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/krungthai_fast_bold"
            android:text="ALIPAY"
            android:textColor="@color/color_White"
            android:textSize="25sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/krungthai_fast_bold"
            android:text="ระบุจำนวนเงิน (บาท)"
            android:textColor="@color/color_White"
            android:textSize="25sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/txt_subtitle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1.3"
            android:background="@color/color_clear"
            android:fontFamily="@font/krungthai_fast_bold"
            android:text="และกดตกลง"
            android:textColor="@color/color_White"
            android:textSize="25sp"
            android:textStyle="bold" />
<!-- Paul_20190206
        <EditText
            android:id="@+id/edit_amount"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1.1"
            android:background="@color/color_white"
            android:clickable="false"
            android:ems="10"
            android:fontFamily="@font/krungthai_fast_bold"
            android:gravity="right"
            android:textColor="@color/color_ktb"
            android:textSize="45sp"
            android:textStyle="bold" />
-->
        <EditText
            android:id="@+id/edit_amount"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="0dp"
            android:background="@drawable/calculate_background_clear"
            android:fontFamily="@font/krungthai_fast_bold"
            android:gravity="right"
            android:maxLength="18"
            android:paddingBottom="13dp"
            android:paddingTop="8dp"
            android:text="0.00"
            android:textColor="@color/color_SkyBlue_C90"
            android:textSize="42sp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_one"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:fontFamily="@font/krungthai_fast_bold"
                android:gravity="center"
                android:text="1"
                android:layout_marginEnd="13dp"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/txt_two"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:fontFamily="@font/krungthai_fast_bold"
                android:gravity="center"
                android:text="2"
                android:layout_marginEnd="13dp"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/txt_three"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:fontFamily="@font/krungthai_fast_bold"
                android:gravity="center"
                android:text="3"
                android:layout_marginEnd="13dp"
                android:textSize="30dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_four"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:fontFamily="@font/krungthai_fast_bold"
                android:gravity="center"
                android:text="4"
                android:layout_marginEnd="13dp"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/txt_five"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:fontFamily="@font/krungthai_fast_bold"
                android:gravity="center"
                android:text="5"
                android:layout_marginEnd="13dp"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/txt_six"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:fontFamily="@font/krungthai_fast_bold"
                android:gravity="center"
                android:text="6"
                android:layout_marginEnd="13dp"
                android:textSize="30dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_seven"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:fontFamily="@font/krungthai_fast_bold"
                android:gravity="center"
                android:text="7"
                android:layout_marginEnd="13dp"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/txt_eight"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:fontFamily="@font/krungthai_fast_bold"
                android:gravity="center"
                android:text="8"
                android:layout_marginEnd="13dp"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/txt_nine"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:fontFamily="@font/krungthai_fast_bold"
                android:gravity="center"
                android:text="9"
                android:layout_marginEnd="13dp"
                android:textSize="30dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:fontFamily="@font/krungthai_fast_bold"
                android:gravity="center"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/txt_zero"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginEnd="13dp"
                android:fontFamily="@font/krungthai_fast_bold"
                android:gravity="center"
                android:text="0"
                android:textSize="30dp" />

            <ImageView
                android:id="@+id/img_del"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/del" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="0.65"
            android:background="@drawable/button_background_blue"
            android:elevation="5dp"
            android:fontFamily="@font/krungthai_fast_bold"
            android:text="ตกลง"
            android:textAllCaps="false"
            android:textColor="@color/color_white"
            android:textSize="20dp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>