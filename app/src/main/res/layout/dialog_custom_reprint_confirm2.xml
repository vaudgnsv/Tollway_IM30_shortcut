<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:background="@color/color_White">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/malam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/color_SkyBlue_C90"
                android:scaleType="centerCrop" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/white_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="50dp"
            app:cardCornerRadius="15dp"
            app:elevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/msgLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:fontFamily="@font/krungthai_fast_bold"
                    android:gravity="center"
                    android:text="รายการขาย"
                    android:textColor="@color/color_PreciousBlue_M60_K90"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_confirm_numberPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/krungthai_fast_bold"
                        android:text="100"
                        android:textColor="@color/color_btn_green"
                        android:textSize="25sp" />

                    <TextView
                        android:id="@+id/tv_confirm_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/krungthai_fast_bold"
                        android:text=" บาท"
                        android:textColor="@color/color_btn_green"
                        android:textSize="25sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/slip2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="7">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/krungthai_fast_regular"
                            android:text="หมายเลขบัตร"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tv_confirm_idcard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/krungthai_fast_bold"
                            android:text="1234567891234"
                            android:textColor="@color/color_BusinessSilver_K85"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/krungthai_fast_regular"
                            android:text="ชื่อเจ้าของบัตร"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tv_confirm_username"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/krungthai_fast_bold"
                            android:text=""
                            android:textColor="@color/color_BusinessSilver_K85"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/krungthai_fast_regular"
                                android:text="DATE"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/tv_confirm_date"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/krungthai_fast_bold"
                                android:text="20 / 07 / 2018"
                                android:textColor="@color/color_BusinessSilver_K85"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/krungthai_fast_regular"
                                android:gravity="right"
                                android:text="TIME"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/tv_confirm_time"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/krungthai_fast_bold"
                                android:gravity="right"
                                android:text="11:12:00"
                                android:textColor="@color/color_BusinessSilver_K85"
                                android:textSize="15sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/krungthai_fast_regular"
                                android:text="TRACE NO."
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/tv_confirm_traceNo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/krungthai_fast_bold"
                                android:text="000012"
                                android:textColor="@color/color_BusinessSilver_K85"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/krungthai_fast_regular"
                                android:gravity="right"
                                android:text="STATUS"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/tv_confirm_status"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/krungthai_fast_bold"
                                android:gravity="right"
                                android:text="Success"
                                android:textColor="@color/color_BusinessSilver_K85"
                                android:textSize="15sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/krungthai_fast_regular"
                                android:text="TERMINAL ID"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/tv_confirm_terminalId"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/krungthai_fast_bold"
                                android:text="88884444"
                                android:textColor="@color/color_BusinessSilver_K85"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/krungthai_fast_regular"
                                android:gravity="right"
                                android:text="APPR. CODE"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/tv_confirm_apprCode"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/krungthai_fast_bold"
                                android:gravity="right"
                                android:text="12345678"
                                android:textColor="@color/color_BusinessSilver_K85"
                                android:textSize="15sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"

                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/krungthai_fast_regular"
                                android:text="MERCHANT ID"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/tv_confirm_merchantId"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/krungthai_fast_bold"
                                android:text="1234567891234"
                                android:textColor="@color/color_BusinessSilver_K85"
                                android:textSize="15sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/krungthai_fast_regular"
                                android:gravity="right"
                                android:text="BATCH NO."
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/tv_confirm_BatchNo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/krungthai_fast_bold"
                                android:gravity="right"
                                android:text="000126"
                                android:textColor="@color/color_BusinessSilver_K85"
                                android:textSize="15sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear_comCode"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/krungthai_fast_regular"
                            android:text="COM CODE"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tv_confirm_comCode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/krungthai_fast_bold"
                            android:text="70026"
                            android:textColor="@color/color_BusinessSilver_K85"
                            android:textSize="15sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:translationY="17dp"
            app:cardBackgroundColor="@color/color_clear"
            app:layout_anchor="@id/white_card"
            app:layout_anchorGravity="center_horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@color/color_White" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:src="@color/color_BusinessSilver_K5" />

            <ImageView
                android:id="@+id/img_confirm_ic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_credit" />
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/btn_confirm_reprint"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_pressed_blue"
                android:elevation="5dp"
                android:fontFamily="@font/krungthai_fast_bold"

                android:text="ลูกค้า"
                android:textColor="@color/color_White"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_confirm_reprint2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_pressed_blue"
                android:elevation="5dp"
                android:fontFamily="@font/krungthai_fast_bold"

                android:text="ร้านค้า"
                android:textColor="@color/color_White"
                android:textSize="20sp" />
        </LinearLayout>

    </android.support.design.widget.CoordinatorLayout>
</RelativeLayout>