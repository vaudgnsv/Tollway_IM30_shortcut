<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#8d000000"
    android:paddingBottom="20dp"
    android:paddingTop="20dp">

    <ImageView
        android:id="@+id/closeImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="@android:color/white"
        android:src="@drawable/cancel2_128x128" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/closeImage"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/skewerImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/card_remove_yellow" />

        <TextView
            android:id="@+id/msgLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/timeburnerbold"
            android:gravity="center"
            android:text="กรุณารับบัตรคืน"
            android:textColor="@android:color/white"
            android:textSize="30sp" />

    </LinearLayout>

</RelativeLayout>