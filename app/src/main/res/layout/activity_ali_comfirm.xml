<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_confirm"
    tools:context=".alipay.AliComfirmActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_type"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:srcCompat="@drawable/ic_alipay" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5.5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/typeLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/krungthai_fast_regular"
                android:gravity="center"
                android:text="Sale"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/krungthai_fast_regular"
                android:gravity="center"
                android:text="ตรวจสอบจำนวนเงิน"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/krungthai_fast_regular"
                android:gravity="center"
                android:text="-------------"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/krungthai_fast_regular"
                android:gravity="center"
                android:text="จำนวนเงิน(บาท)"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/amountLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/krungthai_fast_regular"
                android:gravity="center"
                android:text="100.00"
                android:textColor="@color/color_ktb"
                android:textSize="40dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/saleLayout"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:foreground="?android:attr/selectableItemBackground"
                android:background="@drawable/pressed_menu"
                android:elevation="5dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_type2"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:background="@color/color_clear"
                    android:src="@drawable/img_waiting" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/krungthai_fast_regular"
                    android:text="สเเกนคิวอาร์โค้ด" />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/button_pressed_red"
            android:elevation="5dp"
            android:fontFamily="@font/krungthai_fast_bold"
            android:text="ยกเลิก"
            android:textAllCaps="false"
            android:textColor="@color/color_white"
            android:textSize="20dp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>